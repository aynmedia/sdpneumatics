---
const { categories } = Astro.props;
const selectedCategory = Astro.url.searchParams.get('category') || 'all'; 
---

<div class="flex w-full justify-end">
  <form method="GET" action="" class="flex space-x-4 mb-6">
    <div class="flex">
      <select id="category" name="category" class="p-2 border capitalize">
        <option value="all" selected={selectedCategory === 'all'}>All</option>
        {categories.map((category) => (
          <option value={category.toLowerCase()} selected={selectedCategory === category.toLowerCase()}>
            {category}
          </option>
        ))}
      </select>
    </div>
    <button type="submit" class="bg-green-600 hover:bg-green-900 text-white font-bold py-2 px-4 rounded">
      Apply
    </button>
  </form>
</div>
