---
// Importing necessary assets and components
import { Image } from "astro:assets";
import { Button } from "../ui/button";
---

<div
  class="relative container flex flex-row items-center justify-center gap-4 bg-slate-50 p-6 rounded-xl max-w-7xl md:mx-auto mx-20 my-20"
>
  {/* Background Image Setup */}
  <div
    class="absolute inset-0 bg-[url('/images/SDP_Medical_Client_Updated.webp')] bg-cover bg-center rounded-xl opacity-50"
  >
  </div>

  {/* Buttons */}
  <div class="relative z-10 flex space-x-6">
    <Button
      variant="ghost"
      size="lg"
      className="px-6 py-6 text-slate-900 hover:text-green font-bold"
    >
      Request Quote
    </Button>
    <Button
      variant="secondary"
      size="lg"
      className="px-6 py-6 text-slate-900 hover:text-green font-bold"
    >
      Request Quote
    </Button>
    <Button
      variant="ghost"
      size="lg"
      className="px-6 py-6 text-slate-900 hover:text-green font-bold"
    >
      Request Spare Parts, Service or Support
    </Button>
  </div>
</div>
