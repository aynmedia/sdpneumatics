---
const title = 'Welcome to Astros';
import Hero from '../components/Hero/swiper';
import MainLayout from '../layout/Layout.astro';
import AboutHero from '../components/heroAbout/about.astro';
import Presence from '@/components/presence/presence';
import WhyUs from '@/components/whyus/index.astro';
import Product from '@/components/producthome/index.astro';
import Service from '@/components/services/index.astro';
import Stats from '@/components/stats/stats.astro';
import Contact from '@/components/contact/contactHome.astro';
import Calltoaction from '@/components/calltoaction/calltoaction.astro';
import Distributor from '@/components/distributor/distributor.astro';
import { Image } from 'astro:assets';
import Air from '../../public/images/airtag.jpg';
import { AstroSeo } from '@astrolib/seo';
---

<AstroSeo
  title='Welcome to SD Pneumatics'
  description='SDP Pneumatics is a leading provider of high-quality pneumatic solutions, offering tailored products and services to boost industrial efficiency and performance. With expertise in custom pneumatic systems, we serve a range of industries, providing reliable, innovative, and precision-engineered solutions. Discover dependable pneumatic solutions with SDP Pneumatics.'
/>
<MainLayout title={title} isHomePage={true}>
  <Hero client:load />
  <div class='flex justify-center items-center my-4 p-4'>
    <Image src={Air} alt='hero' width={600} height={400} />
  </div>
  <Calltoaction />
  <Distributor />
  <AboutHero />
  <Presence client:load />
  <!-- <PresenceCarousel /> -->
  <WhyUs />
  <Product />
  <Service />
  <Stats />
  <Contact />
</MainLayout>
